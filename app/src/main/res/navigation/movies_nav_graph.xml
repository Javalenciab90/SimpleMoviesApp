<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movies_nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.java90.simplemoviesapp.ui.view.movies.MoviesFragment">
        <action
            android:id="@+id/action_moviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moviesFragment_to_favoritesFragment"
            app:destination="@id/favoritesMoviesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/seriesFragment"
        android:name="com.java90.simplemoviesapp.ui.view.series.SeriesFragment">
        <action
            android:id="@+id/action_seriesFragment_to_seriesDetailFragment"
            app:destination="@id/seriesDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_seriesFragment_to_favoritesSeriesFragment"
            app:destination="@id/favoritesSeriesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/favoritesMoviesFragment"
        android:name="com.java90.simplemoviesapp.ui.view.favorites.FavoritesMoviesFragment">
        <action
            android:id="@+id/action_favoritesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.java90.simplemoviesapp.ui.view.detailMovie.MoviesDetailFragment">
        <argument
            android:name="discoverMovie"
            app:argType="com.java90.simplemoviesapp.domain.models.movies.DiscoverMovie" />
    </fragment>

    <fragment
        android:id="@+id/seriesDetailFragment"
        android:name="com.java90.simplemoviesapp.ui.view.detailSerie.SeriesDetailFragment" />
    <fragment
        android:id="@+id/favoritesSeriesFragment"
        android:name="com.java90.simplemoviesapp.ui.view.favorites.FavoritesSeriesFragment">
        <action
            android:id="@+id/action_favoritesSeriesFragment_to_seriesDetailFragment"
            app:destination="@id/seriesDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

</navigation>